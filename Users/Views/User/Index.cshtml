@model List<User>
@{
    ViewData["Title"] = "Index";
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New User
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr style="text-align:center">
                
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    StreetName
                </th>
                <th>
                    HouseNumber
                </th>
                <th>
                    ApartmentNumber
                </th>
                <th>
                    PostalCode
                </th>
                <th>
                    Town
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    DateOfBirth
                </th>
                <th>
                    Age
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody style="text-align:center">
            @foreach (var user in Model)
            {
            <tr>
                
                <td width="50%">
                    @user.FirstName
                </td>
                <td width="50%">
                    @user.LastName
                </td>
                <td width="50%">
                    @user.StreetName
                </td>
                <td width="50%">
                    @user.HouseNumber
                </td>
                <td width="50%">
                    @user.ApartmentNumber
                </td>
                <td width="50%">
                    @user.PostalCode
                </td>
                <td width="50%">
                    @user.Town
                </td>
                <td width="50%">
                    @user.PhoneNumber
                </td>
                <td width="50%">
                    @String.Format("{0:dd/MM/yyyy}", user.DateOfBirth)
                </td>
                <td width="50%">
                    @user.Age
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
